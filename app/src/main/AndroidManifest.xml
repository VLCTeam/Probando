<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.binarycode.probando">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_vlcteam"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Activity Settings -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"> <!-- Esto es lo que hace mostrar la flechita de atras -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.binarycode.probando.MainActivity" />
        </activity>
        <!-- Activity About -->
        <activity
            android:name=".AboutActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.binarycode.probando.MainActivity" />
        </activity>
        <activity
            android:name=".CodificadorMD5"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.binarycode.probando.MainActivity" />
        </activity>
    </application>
    <!-- Permisos de la APP -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
